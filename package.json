{
  "name": "browser-version-detection",
  "version": "2.1.0",
  "description": "detect the name and the version of a browser",
  "main": "src/browser-detection.js",
  "scripts": {
    "start": "make-dir dist && uglifyjs src/browser-detection.js -o dist/browser-detection.min.js -ecma 8",
    "postinstall": "npm start",
    "clean": "trash dist/",
    "lint": "eslint src/**/*.js",
    "test": "nyc --reporter=lcov --reporter=text jasmine"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "dist"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pure-js/browser-detection.git"
  },
  "keywords": [
    "browser detection"
  ],
  "author": "pure-js",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pure-js/browser-detection/issues"
  },
  "homepage": "https://github.com/pure-js/browser-detection#readme",
  "devDependencies": {
    "babel-cli": "~6.26.0",
    "babel-preset-env": "~1.6.1",
    "babel-register": "~6.26.0",
    "eslint": "~4.12.0",
    "eslint-config-google": "^0.9.1",
    "jasmine": "~2.8.0"
  },
  "dependencies": {
    "make-dir-cli": "~1.0.0",
    "trash-cli": "~1.4.0",
    "uglify-es": "~3.2.0"
  }
}
